  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

model WebAuthnCredential {
  id           String    @id @default(cuid())
  userId       String
  credentialId String    @unique
  publicKey    Bytes     @db.ByteA
  counter      Int       @default(0)
  deviceType   String?
  deviceName   String?
