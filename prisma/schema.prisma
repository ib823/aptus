  qrCodeUrl         String?   @db.Text
  facilitatorNotes  String?   @db.Text
  agenda            Json?
  currentStepId     String?
  currentScopeItemId String?
  duration          Int?
  recordingUrl      String?

  assessment Assessment @relation(fields: [assessmentId], references: [id])
  attendees  WorkshopAttendee[]
  votes      WorkshopVote[]
  actionItems WorkshopActionItem[]
  minutes    WorkshopMinutes?

  @@index([assessmentId])
  @@index([sessionCode])
  @@index([assessmentId, status])
}

// Phase 21: Workshop Attendees
model WorkshopAttendee {
  id              String    @id @default(cuid())
  sessionId       String
  userId          String
  role            String    @default("attendee")
  joinedAt        DateTime  @default(now())
  leftAt          DateTime?
  deviceType      String?
  isFollowing     Boolean   @default(true)
  isPresenter     Boolean   @default(false)
  connectionStatus String   @default("connected")
  lastPingAt      DateTime  @default(now())
  createdAt       DateTime  @default(now())

  session WorkshopSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user    User            @relation(fields: [userId], references: [id])

  @@unique([sessionId, userId])
  @@index([sessionId])
  @@index([userId])
}

// Phase 21: Workshop Votes
model WorkshopVote {
  id              String   @id @default(cuid())
  sessionId       String
  processStepId   String
  userId          String
  classification  String
  confidence      String?
  notes           String?  @db.Text
  votedAt         DateTime @default(now())

  session WorkshopSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, processStepId, userId])
  @@index([sessionId])
  @@index([sessionId, processStepId])
}

// Phase 21: Workshop Action Items
model WorkshopActionItem {
  id              String    @id @default(cuid())
  sessionId       String
  title           String
  description     String?   @db.Text
  assignedTo      String?
  assignedToName  String?
  dueDate         DateTime?
  status          String    @default("open")
  priority        String    @default("medium")
  relatedStepId   String?
  relatedScopeItemId String?
  completedAt     DateTime?
  completedBy     String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

